{
  // Visuals
  "editor.fontSize": 13.5,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "file-icons",
  "workbench.productIconTheme": "icons-carbon",

  // Editor
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.minimap.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.editor.untitled.hint": "hidden",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.tabSize": 2,
  "editor.accessibilitySupport": "off",
  "editor.stickyScroll.enabled": true,
  "audioCues.lineHasError": "off",
  "audioCues.lineHasFoldedArea": "off",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true, // this allows ESLint to auto fix on save
    "source.organizeImports": false
  },
  "workbench.editor.closeOnFileDelete": true,
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,

  // Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "diffEditor.ignoreTrimWhitespace": false,

  // Vim
  "vim.leader": ",",
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.hlsearch": false,
  "vim.foldfix": true,
  "vim.smartRelativeLine": true,
  "vim.showMarksInGutter": true,
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "<space>"
      ],
      "after": [
        ":"
      ]
    },
    {
      "before": [
        "<C-h>"
      ],
      "commands": [
        "workbench.action.navigateLeft"
      ]
    },
    {
      "before": [
        "<C-l>"
      ],
      "commands": [
        "workbench.action.navigateRight"
      ]
    },
    {
      "before": [
        "<C-k>"
      ],
      "commands": [
        "workbench.action.navigateUp"
      ]
    },
    {
      "before": [
        "<C-j>"
      ],
      "commands": [
        "workbench.action.navigateDown"
      ]
    },
    {
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        "editor.action.format"
      ]
    }
  ],
  // auto switch input method    im-select https://github.com/daipeihust/im-select
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/local/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/usr/local/bin/im-select com.apple.keylayout.ABC {im}",

  // Extension configs
  "extensions.ignoreRecommendations": true,
  "leetcode.endpoint": "leetcode-cn",
  "leetcode.workspaceFolder": "/Users/xlsama/code/algorithm",
  "leetcode.defaultLanguage": "typescript",
  "leetcode.hint.configWebviewMarkdown": false,
}