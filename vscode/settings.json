{
  // Workbench
  "workbench.colorTheme": "Vitesse Dark",
  "workbench.iconTheme": "file-icons",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#222",
    "[Vitesse Dark]": {
      "list.hoverBackground": "#282828",
      "list.inactiveSelectionBackground": "#282828",
      "list.activeSelectionBackground": "#282828",
      "list.focusBackground": "#282828",
      "quickInputList.focusBackground": "#4d937599",
      "editor.selectionBackground": "#eeeeee25",
      "editor.selectionHighlightBackground": "#eeeeee20",
      "terminal.selectionBackground": "#eeeeee25"
    }
  },
  "workbench.list.smoothScrolling": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.empty.hint": "hidden",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "window.newWindowDimensions": "fullscreen",
  "window.restoreFullscreen": true,
  "window.nativeTabs": true, // this is great, macOS only
  "window.titleBarStyle": "native",
  "window.customTitleBarVisibility": "windowed",
  "window.systemColorTheme": "auto",

  // Editor
  "editor.fontSize": 17,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.stickyScroll.enabled": true,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.accessibilitySupport": "off",
  "audioCues.lineHasError": "off",
  "audioCues.lineHasFoldedArea": "off",
  "editor.guides.bracketPairs": "active",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "README.md": "*.md, LICENCE",
    "package.json": ".*, tsconfig.json, tailwind.config.*, pnpm*, package*, yarn*, eden*, *.sh, bun.lockb",
    "cargo.toml": "*.toml, cargo*"
  },
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[c][cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "emmet.showSuggestionsAsSnippets": true,
  "editor.linkedEditing": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // Terminal
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.fontWeightBold": "400",
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.scrollback": 10000,

  // Source Control
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.allowNoVerifyCommit": true,
  "git.confirmNoVerifyCommit": false,
  "git.allowForcePush": true,
  "git.confirmForcePush": false,
  "git.openRepositoryInParentFolders": "always",

  // Search
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  "search.smartCase": true,

  // Extension configs
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "bun",
    "python": "python3"
  },
  "C_Cpp.intelliSenseEngine": "disabled",
  "eslint.quiet": true,
  "eslint.format.enable": true,
  "prettier.semi": false,
  "prettier.tabWidth": 2,
  "prettier.printWidth": 80,
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.bracketSpacing": true,
  "prettier.trailingComma": "all",
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "codeium.enableCodeLens": false,

  // Vim
  "vim.leader": ",",
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.foldfix": true,
  "vim.showMarksInGutter": true,
  // auto switch input method    im-select https://github.com/daipeihust/im-select
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/Users/xlsama/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/Users/xlsama/bin/im-select com.apple.keylayout.ABC {im}",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-e>": false,
    "<C-f>": false,
    "<C-b>": false
  },
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<space>"],
      "after": [":"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"],
      "silent": true
    },
    {
      "before": ["u"],
      "commands": ["undo"],
      "silent": true
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"],
      "silent": true
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["<C-d>"],
      "after": ["1", "0", "j", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["1", "0", "k", "z", "z"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.navigateLeft"],
      "silent": true
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.navigateRight"],
      "silent": true
    },
    {
      "before": ["<leader>", "v"],
      "after": ["V"]
    },
    {
      "before": ["g", "["],
      "commands": ["editor.fold"],
      "when": "editorTextFocus && foldingEnabled"
    },
    {
      "before": ["g", "]"],
      "commands": ["editor.unfold"],
      "when": "editorTextFocus && foldingEnabled"
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"],
      "silent": true
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"],
      "silent": true
    }
  ],
  "vim.operatorPendingModeKeyBindings": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["w"],
      "after": ["i", "w"]
    },
    {
      "before": ["9"],
      "after": ["i", "("]
    },
    {
      "before": ["["],
      "after": ["i", "["]
    },
    {
      "before": ["{"],
      "after": ["i", "{"]
    },
    {
      "before": ["'"],
      "after": ["i", "'"]
    },
    {
      "before": ["\""],
      "after": ["i", "\""]
    },
    {
      "before": ["`"],
      "after": ["i", "`"]
    },
    {
      "before": [","],
      "after": ["i", "<"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["w"],
      "after": ["i", "w"]
    },
    {
      "before": ["9"],
      "after": ["i", "("]
    },
    {
      "before": ["["],
      "after": ["i", "["]
    },
    {
      "before": ["{"],
      "after": ["i", "{"]
    },
    {
      "before": ["'"],
      "after": ["i", "'"]
    },
    {
      "before": ["\""],
      "after": ["i", "\""]
    },
    {
      "before": ["`"],
      "after": ["i", "`"]
    },
    {
      "before": [","],
      "after": ["i", "<"]
    }
  ]
}
