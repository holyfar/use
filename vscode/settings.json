{
  // Workbench
  "workbench.colorTheme": "Vitesse Dark",
  "window.systemColorTheme": "auto",
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.colorCustomizations": {
    "[Vitesse Dark]": {
      "list.hoverBackground": "#282828",
      "list.inactiveSelectionBackground": "#282828",
      "list.activeSelectionBackground": "#282828",
      "list.focusBackground": "#282828",
      "quickInputList.focusBackground": "#4d937599",
      "editor.selectionBackground": "#eeeeee40",
      "editor.selectionHighlightBackground": "#eeeeee25",
      "editor.lineHighlightBackground": "#282828",
      "terminal.selectionBackground": "#eeeeee25",
      "editorGroup.border": "#121212"
    }
  },
  "workbench.activityBar.location": "top",
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "window.newWindowDimensions": "fullscreen",
  "window.restoreFullscreen": true,
  "window.nativeTabs": true, // this is great, macOS only
  "window.title": "${rootName}",
  "window.titleBarStyle": "native",
  "window.customTitleBarVisibility": "windowed",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.list.smoothScrolling": true,
  "workbench.editor.empty.hint": "hidden",
  "workbench.startupEditor": "none",

  // Editor
  "editor.fontSize": 16,
  "editor.lineHeight": 1.55,
  "editor.fontFamily": "'Monaspace Neon', monospace",
  "editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'liga'",
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.stickyScroll.enabled": true,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.guides.bracketPairs": "active",
  "editor.minimap.enabled": true,
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "README.md": "*.md, LICENCE",
    "package.json": ".*, tsconfig*, *.config.js, *.config.ts, pnpm*, package*, yarn*, *.sh, bun.lockb, webpack*",
    "cargo.toml": "*.toml, cargo*"
  },
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.sortPackageJson": "explicit",
    "source.organizeImports": "never"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "[fish]": {
    "editor.defaultFormatter": "bmalehorn.vscode-fish"
  },
  "emmet.showSuggestionsAsSnippets": true,
  "editor.linkedEditing": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "security.promptForLocalFileProtocolHandling": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.accessibilitySupport": "off",
  "accessibility.signals.clear": {
    "sound": "off"
  },
  "editor.lineNumbers": "interval",
  "explorer.confirmPasteNative": false,
  "svg.preview.background": "transparent",

  // Terminal
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.fontWeightBold": "400",
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.minimumContrastRatio": 1,

  // Source Control
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.allowNoVerifyCommit": true,
  "git.confirmNoVerifyCommit": false,
  "git.allowForcePush": true,
  "git.confirmForcePush": false,
  "git.openRepositoryInParentFolders": "always",
  "scm.workingSets.enabled": true,

  // Search
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  "search.smartCase": true,

  // Extension configs
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "bun",
    "python": "python3"
  },
  "errorLens.excludeBySource": ["eslint", "cSpell"],
  "eslint.format.enable": true,
  "eslint.experimental.useFlatConfig": true,
  "prettier.semi": false,
  "prettier.tabWidth": 2,
  "prettier.printWidth": 80,
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.bracketSpacing": true,
  "prettier.trailingComma": "all",
  "gitlens.codeLens.enabled": false,
  "cSpell.language": "en,en-US",
  "cSpell.allowCompoundWords": true,
  "Codegeex.Privacy": true
}
