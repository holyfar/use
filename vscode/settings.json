{
  // visual
  "editor.fontSize": 14.5,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "file-icons",
  "workbench.productIconTheme": "icons-carbon",

  // editor
  "editor.minimap.enabled": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.inlineSuggest.enabled": true,
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.list.smoothScrolling": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.accessibilitySupport": "off",
  "editor.stickyScroll.enabled": true,
  "audioCues.lineHasError": "off",
  "audioCues.lineHasFoldedArea": "off",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": ".*, pnpm-lock.yaml, tsconfig.json",
    "README.md": "CHANGELOG.md, LICENCE"
  },
  "editor.guides.bracketPairs": "active",
  "window.commandCenter": false,
  "editor.linkedEditing": true,

  // terminal
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "Terminal.app",

  // git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "diffEditor.ignoreTrimWhitespace": false,

  // vim
  "vim.leader": ",",
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.hlsearch": false,
  "vim.foldfix": true,
  "vim.showMarksInGutter": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<space>"],
      "after": [":"]
    },
    {
      "before": [";"],
      "commands": ["workbench.action.showCommands"],
      "silent": true
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["<C-d>"],
      "after": ["1", "0", "j", "<leader>", "c"]
    },
    {
      "before": ["<C-u>"],
      "after": ["1", "0", "k", "<leader>", "c"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.navigateLeft"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.navigateRight"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.navigateUp"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.navigateDown"]
    },
    {
      "before": ["<leader>", "v"],
      "after": ["V"]
    },
    {
      "before": ["<leader>", "g"],
      "after": ["G"]
    },
    {
      "before": ["<leader>", "c"],
      "after": ["z", "z"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["code-runner.run"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["workbench.action.debug.start"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["workbench.action.openRecent"],
      "silent": true
    }
  ],
  // auto switch input method    im-select https://github.com/daipeihust/im-select
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/Users/xlsama/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/Users/xlsama/bin/im-select com.apple.keylayout.ABC {im}",

  // code formatting
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[c][cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },

  // prompt
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  // code style
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.arrowParens": "avoid",

  // extension config
  "extensions.ignoreRecommendations": true,
  "code-runner.runInTerminal": true,
  "C_Cpp.intelliSenseEngine": "disabled",
  "hexeditor.columnWidth": 16,
  "hexeditor.showDecodedText": true,
  "hexeditor.defaultEndianness": "little",
  "hexeditor.inspectorType": "aside"
}
